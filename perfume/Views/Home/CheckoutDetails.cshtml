@using perfume.Models.Homemenu;
@{
    ViewBag.Title = "CheckoutDetails";
    //Layout = "~/Views/Shared/Admin_Layout.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="blogs" id="blogs">
    <div class="check" style="margin:10%;color:white">
        @if (Session["cart"] == null)
        {
            <div class="alert alert-danger">
                <strong>No product added to cart!</strong>
            </div>

        }
        else
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Line Total</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int Total = 0;
                    }
                    @foreach (Item item in (List<Item>)Session["cart"])
                    {
                        int lineTotal = Convert.ToInt32(item.Quantity * item.Product.price);
                        Total = Convert.ToInt32(@Total + lineTotal);

                        Session["SesTotal"] = Total;

                        <tr>
                            <td>@item.Product.ProductName</td>
                            <td>@item.Product.price</td>
                            <td>@item.Quantity</td>
                            <td>@lineTotal</td>
                        </tr>
                    }

                    <tr>
                        <td colspan="4" class="text-right"><b>Total: @Total</b></td>

                    </tr>
                </tbody>
            </table>
            <a href="@Url.Action("PaymentWithPapal", "Payment")" class="btn btn-success">Payment >></a>

        }
</div>
</section>