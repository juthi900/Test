@model perfume.ViewModel.Register

@{
    ViewBag.Title = "Register";
  
}

<h2>Register</h2>

<div>
    @using (Html.BeginForm("SaveRegisterDetails", "Home"))
    {
        <section class="about" id="about">

            <h1 class="heading"> <span>Please SignUp Now </span>  </h1>

            <div class="row">

                <div class="image">
                    <img src="../img/dark.jpg" alt="">
                </div>

                <div class="content" style="color:white; font-size:20px; padding:10px">

                    <h3>SignUp</h3>

                    <div class="row">
                        <!--Show details are saved successfully message-->
                        <div class="col-lg-12">@ViewBag.Message</div>
                    </div><br />
                    <div style="color:red;">@Html.ValidationSummary()</div>
                    <div class="row">
                        <!--Show details are saved successfully message-->
                        <div class="col-lg-12">@ViewBag.Message</div>
                    </div><br />
                    <div class="row">
                        <div class="col-lg-4">@Html.LabelFor(a => a.FirstName)</div>
                        <div class="col-lg-8">@Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })</div>
                    </div><br />
                    <div class="row">
                        <div class="col-lg-4">@Html.LabelFor(a => a.LastName)</div>
                        <div class="col-lg-8">@Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })</div>
                    </div><br />
                    <div class="row">
                        <div class="col-lg-4">@Html.LabelFor(a => a.Email)</div>
                        <div class="col-lg-8" style="text-transform:lowercase;">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
                    </div><br />
                    <div class="row">
                        <div class="col-lg-4">@Html.LabelFor(a => a.Password)</div>
                        <div class="col-lg-8">@Html.TextBoxFor(a => a.Password, new { @class = "form-control", type = "Password" })</div>
                    </div>
                    <br />

                    <div class="row">
                        <p style="color:white">
                            please register now
                            <a href="@Url.Action("Login")" style="color:white">Login</a>
                        </p>
                    </div>
                    <input type="submit" value="SignUp" class="btn btn-primary" />
                </div>

            </div>
        </section>
    }

</div>
