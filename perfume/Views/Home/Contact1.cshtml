@model perfume.ViewModel.Contact1

@{
    ViewBag.Title = "Contact";
}

<h2>Contact</h2>

<div>
    @using (Html.BeginForm("SaveRegisterDetails2", "Home"))
    {
        <div style="color:red;">@Html.ValidationSummary()</div>
        <section class="about" id="about">

            <h1 class="heading"> <span>Contact Us </span>  </h1>

            <div class="row">

                <div class="image" style="margin:5px;">
                    <img src="../img/taos.jpg" alt="">
                </div>

                <div class="content" style="color:white; font-size:20px; padding:10px">

                    <h3>Contact</h3>

                    <div class="row">
                        <!--Show details are saved successfully message-->
                        <div class="col-lg-12">@ViewBag.Message</div>
                    </div><br />
                    <div class="row">
                        <div class="col-lg-2">@Html.LabelFor(a => a.Name)</div>
                        <div class="col-lg-10">@Html.TextBoxFor(a => a.Name, new { @class = "form-control" })</div>
                    </div><br />

                    <div class="row">
                        <div class="col-lg-2">@Html.LabelFor(a => a.Email)</div>
                        <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { @class = "form-control" })</div>
                    </div><br />
                    <div class="row">
                        <div class="col-lg-2">@Html.LabelFor(a => a.Details)</div>
                        <div class="col-lg-10 mvc">@Html.TextBoxFor(a => a.Details, new { @class = "form-control" })</div>
                    </div><br />
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </section>
    }
</div>
